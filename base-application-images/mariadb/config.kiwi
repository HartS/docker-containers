<?xml version="1.0" encoding="utf-8"?>

<image schemaversion="6.5" name="base-mariadb">
  <description type="system">
    <author>Flavio Castelli</author>
    <contact>fcastelli@suse.com</contact>
    <specification>MariaDB running on an openSUSE Leap docker guest</specification>
  </description>
  <preferences>
    <type image="docker">
      <containerconfig
        name="mariadb"
        maintainer="SUSE Containers Team &lt;containers@suse.com&gt;">
        <expose>
          <port number="3306"/>
        </expose>
        <volumes>
          <volume name="/var/lib/mysql"/>
          <volume name="/docker-entrypoint-initdb.d"/>
        </volumes>
        <entrypoint execute="entrypoint.sh"/>
        <environment>
            <env name="MYSQL_DISABLE_REMOTE_ROOT" value="true"/>
        </environment>
      </containerconfig> 
    </type>
    <version>1.0.0</version>
    <packagemanager>zypper</packagemanager>
    <rpm-check-signatures>false</rpm-check-signatures>
    <rpm-force>true</rpm-force>
    <rpm-excludedocs>true</rpm-excludedocs>
    <locale>en_US</locale>
    <keytable>us.map.gz</keytable>
    <hwclock>utc</hwclock>
  </preferences>
  <users>
    <user home="/root" name="root" groups="root"/>
  </users>
  <repository>
    <source path="obsrepositories:/"/>
  </repository>
  <packages type="image">
    <package name="ca-certificates"/>
    <package name="ca-certificates-mozilla"/>
    <package name="coreutils"/>
    <package name="iputils"/>
    <package name="openSUSE-build-key"/>
    <package name="openSUSE-release"/>
    <package name="openSUSE-release-mini"/>
    <package name="mariadb"/>
  </packages>
  <packages type="bootstrap">
    <package name="acl"/>
    <package name="dracut"/>
    <package name="elfutils"/>
    <package name="filesystem"/>
    <package name="fipscheck"/>
    <package name="glibc-locale"/>
    <package name="ncurses-utils"/>
    <package name="pkg-config"/>
    <package name="sg3_utils"/>
  </packages>
  <packages type="delete">
    <package name="aaa_base"/>
    <package name="dbus-1"/>
    <package name="dracut"/>
    <package name="fipscheck"/>
    <package name="glibc-locale"/>
    <package name="kbd"/>
    <package name="kmod"/>
    <package name="ncurses-utils"/>
    <package name="pinentry"/>
    <package name="pkg-config"/>
    <package name="sg3_utils"/>
    <package name="systemd-sysvinit"/>
    <package name="udev"/>
  </packages>
</image>
